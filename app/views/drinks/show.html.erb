<% if current_user == "impossible" %>
<%= image_tag "#{@drink.image}", alt: "#{@drink.name}" if @drink.image %>
<br>
<h1><%= @drink.name %></h1>
<h3>Ingredients:</h3>
<% @drink.measures.each do |m| %>
<p><%= m.size %> <%= m.measurement_type %> of <%= m.ingredient.name %><%= " <<lends to a #{m.ingredient.flavor_profile.name.downcase} flavor profile>>" if m.ingredient.flavor_profile %></p>
<% end %>
<p>Preparation: <%= @drink.preparation %></p>
<br>
<%= link_to "Back to New Drink Form", new_drink_path if current_user.admin_access %>
<% end %>

<section class="pricing pt-5">
  <div class="row pb-5 mt-5">
    <div class="col-xl-3 col-l-3 offset-xl-3 offset-l-3 mb-4" style="display:flex;justify-content:center;align-items:center;">
        <div class="card border-0 shadow drink-list">
          <img src="<%= @drink.image %>" class="card-img-top" alt="<%= @drink.name %>">
        </div>
    </div>

    <div class="col-xl-3 col-l-3" style="display:flex;justify-content:center;align-items:flex-end;">
        <div class="card border-0 shadow drink-list">

          <div class="card-body text-center py-4 px-5">
            <h2 class="mb-3"><%= @drink.name %></h2>
            <div class="card-text text-black-50">
              <p><strong>Ingredients</strong></p>
                  <% @drink.measures.each do |m| %>
                  <p><%= m.size %> <%= m.measurement_type %> of <%= m.ingredient.name %>
                  <% if m.ingredient.flavor_profile %><br><em><%= "contributes to #{m.ingredient.flavor_profile.name.downcase} palate" %></em><% end %></p>
                  <% end %>

          </div>
          <a href="#" class="btn btn-primary text-white">Like this Drink?</a>
        </div>
    </div>
  </div>
</section>
