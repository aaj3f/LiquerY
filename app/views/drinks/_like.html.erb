<%= form_for rating do |f| %>
  <%= f.collection_radio_buttons(:score, [[1, 'thumbs-up'], [-1, 'thumbs-down']], :first, :last) do |b| %>
  <%= b.label(class: "btn") { b.radio_button + image_tag(b.text+'.png') } %>
  <% end %>
  <%= f.submit "Rate this Drink?", class: "btn btn-primary text-white" %>
<% end %>
