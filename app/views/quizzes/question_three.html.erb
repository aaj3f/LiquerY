<section class="pricing py-5">
  <%= form_for @quiz, url: quizzes_answer_three_path do |f| %>

  <div class="container">

    <div class="row mt-5 mb-5">
      <div class="col-md-8 offset-md-2">
        <div class="inner-card-text">
          <h2 class="text-center text-white">Before this quiz, you told us a lil about what you like.<br>Should we use your previous preferences now?<br>Or are we just using your answers from this quiz?
            </h2>
        </div>
      </div>
    </div>

    <div class="row my-5">

      <div class="col-md-4 offset-md-1">
        <div class="card mb-5">
          <label for="quiz_use_previous_ratings_1" >
            <div class="card-body">
              <div class="inner-card-text">
                <input id="quiz_use_previous_ratings_1" type="radio" name="quiz[use_previous_ratings]" value="1">
                <h3 class="text-center">Yes, use them.</h3>
              </div>
            </div>
          </label>
        </div>
      </div>

      <div class="col-md-4 offset-md-2">
        <div class="card mb-5" style="background-color:green;">
          <label for="quiz_use_previous_ratings_0" >
            <div class="card-body">
              <div class="inner-card-text">
                <input id="quiz_use_previous_ratings_0" type="radio" name="quiz[use_previous_ratings]" value="0" checked>
                <h3 class="text-center">No, let's start fresh.</h3>
              </div>
            </div>
          </label>
        </div>
      </div>
    </div>

    <div class="container submit-container">
      <%= f.submit "Finished? Let's move to the next question!", class: "btn btn-lg btn-success" %>
    </div>

  </div>
  <% end %>
</section>

<script type="text/javascript">
  $(document).ready(function() {
     $(".pricing .card label").on("click",function() {
          $('.card input:checked').not(this).closest('.card').css("background-color", "white");
          $(this).closest('.card').css("background-color", "green");
      });
  });
</script>
