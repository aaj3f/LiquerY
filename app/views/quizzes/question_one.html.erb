<div id="ac-wrapper" style='display:none'>
    <div class="col-lg-6 offset-lg-3 mt-5" id="popup">
        <div class="popup-div text-center text-dark">
             <div class="my-5"><h2><%= modal_header %></h2></div>
             <div class="mb-2"><h4><%= modal_text %></h4></div>
            <div class="container submit-container my-5"><input class="btn btn-lg btn-info shadow" type="submit" name="submit" value="Okurrr??" onClick="PopUp('hide')" /></div>
        </div>
    </div>
</div>

<%= form_for @quiz, url: quizzes_answer_one_path, method: :post do |f| %>

<section class="pricing py-5">
  <div class="container">

    <div class="row mt-2 mb-5">
      <!-- Pro Tier -->
      <div class="col-md-8 offset-md-2">
        <!-- <div class="card mb-5">
          <div class="card-body"> -->
            <!-- <h5 class="card-title text-muted text-uppercase text-center">Free</h5> -->
            <div class="inner-card-text">
              <h2 class="text-center text-white">If there are any drinks here you've already tried<br>let us know what you think of them!
                </h2>
            </div>
          <!-- </div>
        </div> -->
      </div>
    </div>

      <div class="row">
        <%= f.fields_for :quiz_ratings, @quiz_ratings do |rating_fields| %>
        <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 ml-md-auto mr-md-auto">
          <div class="card mb-5">
            <div class="card-body">
              <!-- <h5 class="card-title text-muted text-uppercase text-center">Free</h5> -->
              <div class="inner-card-text">
                <span><h6 class="text-center"><%= rating_fields.object.drink.name %></h6></span>
              </div>
              <hr>

              <div class="row d-flex justify-content-center">
                  <%= rating_fields.hidden_field :drink_id %>
                  <%= rating_fields.collection_radio_buttons(:score, [[1, 'thumbs-up'], [-1, 'thumbs-down']], :first, :last) do |b| %>
                  <%= b.label(class: "btn") { b.radio_button + image_tag(b.text+'.png') } %>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
  </div>
  <div class="container submit-container">
    <%= f.submit "Finished? Let's move to the next question!", class: "btn btn-lg btn-success shadow", data: { disable_with: false } %>
  </div>
</section>
<% end %>



<script type="text/javascript">
  function PopUp(hideOrshow) {
    if (hideOrshow == 'hide') document.getElementById('ac-wrapper').style.display = "none";
    else document.getElementById('ac-wrapper').removeAttribute('style');
}
// window.onload = function () {
//     setTimeout(function () {
//         PopUp('show');
//     }, 1000);
// }
  $(document).ready(function () {
    setTimeout(function () {
      PopUp('show');
    }, 1000);
  })

  $(document).ready(function() {
     $(".pricing .card").on("click",function() {
          if($(this).find('input[value=1]').is(':checked')) {
            $(this).closest('.card').removeClass('highlight-red');
            $(this).closest('.card').addClass('highlight-green');
          }
      });
  });

  $(document).ready(function() {
     $(".pricing .card").on("click",function() {
          if($(this).find('input[value=-1]').is(':checked')) {
            $(this).closest('.card').removeClass('highlight-green');
            $(this).closest('.card').addClass('highlight-red');
          }
      });
  });


</script>
